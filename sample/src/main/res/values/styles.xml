<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_xxxx_large</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="RobotoMediumWhiteBoldXXXXLarge">
        <item name="android:textSize">@dimen/text_size_xxxx_large</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoMediumWhiteBoldXXXLarge">
        <item name="android:textSize">@dimen/text_size_xxx_large</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoMediumDarkGreyBoldExtraLarge">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">@color/text_dark_grey</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoMediumLightGreyMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RobotoMediumLightGreyXXLarge">
        <item name="android:textSize">@dimen/text_size_xx_large</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RobotoMediumWhiteLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RobotoMediumWhiteBoldTimer">
        <item name="android:textSize">@dimen/text_size_timer</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>